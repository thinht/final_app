<div>
  <div class="row bgForm">
    <% @albums.each do |album| %>
    <div class="col-md-3 col-xs-3 bgDivTest">

      <%= image_tag album.image.url %>
     <!--  <%= image_tag album.image.url(:medium) %>
      <%= image_tag album.image.url(:thumb) %> -->
      <div class="row">
        <div class="sizeText">
          <%= album.title %>
        </div>
      </div>
      <div class="row">
        <div class="sizeText">
          <%= album.desc %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2 col-xs-2 col-md-offset-3 col-xs-offset-3 setMargin">
          <%= link_to t('.edit'), edit_album_path(album) %>
        </div>
        <div class="col-md-2 col-xs-2 setMargin">
          <%= link_to t('.show'), album_pictures_path(album) %>
        </div>
        <div class="col-md-2 col-xs-2 setMargin">
          <%= link_to t('.delete'), album_path(album), data: {confirm: t('.str_delete')}, method: :delete %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-offset-5 col-xs-offset-5 col-xs-2 col-md-2">

      <%= link_to t('.new_album'), new_user_album_path %>
    </div>

  </div>
  <div class="row">
    <div class="col-md-offset-5 col-xs-offset-5 col-xs-2 col-md-2">

      <%= link_to t('.pictures_private'), dashboard_user_path(current_user) %>
    </div>

  </div>
  <div class="row">
    <div class="col-md-offset-5 col-xs-offset-5 col-xs-2 col-md-2">

      <%= link_to t('.pictures_public'), pictures_path %>
    </div>

  </div>

</div>
<div class="row">
    <div>
      <%= paginate @albums %>
    </div>
  </div>

