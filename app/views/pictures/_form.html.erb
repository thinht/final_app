<div>

  <div class="row">
    <div>
      <%= form_for picture, url: url_link do |form| %>
      <%= form.file_field :image %>
      <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
      </p>

      <p>
        <%= form.label :description %><br>
        <%= form.text_area :desc %>
      </p>
      <p>
        <%= form.label :public %><br>
        <%= form.check_box :is_public %><br>
      </p>
      <p>
        <%= form.submit %>
      </p>

      <% end %>
    </div>
  </div>
</div>