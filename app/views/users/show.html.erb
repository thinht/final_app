<h1><%= t('.home.index.current_user')%></h1>
<div class="row">
  <div>
    <%= form_for @user do |form| %>

    <p>
      <%= form.label :name %><br>
      <%= @user.name %>
    </p>
    <div class="row">
        <div class="col-md-2 col-xs-2 col-md-offset-3 col-xs-offset-3 setMargin">
          <%= link_to t('.albums.index.edit'), edit_user_path(@user) %>
        </div>
        <div class="col-md-2 col-xs-2 setMargin">
          <%= link_to t('.albums.index.show'), user_albums_path(@user) %>
        </div>
        <div class="col-md-2 col-xs-2 setMargin">
          <%= link_to t('.albums.index.delete'), user_path(@user), data: {confirm: t('.str_delete')}, method: :delete %>
        </div>
      </div>

    <% end %>
  </div>
</div>